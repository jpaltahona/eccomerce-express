extends layout.pug

block hero
    section.hero.is-dark-is-bold
        .hero-body
            .container
                h1.title Octolion shop
                h2.subtitle find the best products a the best price
block content
    .container(style='flex: 1; padding: 50px 0;')
        .columns.is-multiline
            each product in products
                .column
                    .card
                        .card-image
                            img(src=`${product.img}`, alt=`${product.name}`)
                    .card-content
                        h1.title=product.name
                        .button.is-fullwidth.is-primary  
                            span.icon
                                i.fas.fa-cart-plus
                            span add to card 
                            strong= ` ${product.price} USD`